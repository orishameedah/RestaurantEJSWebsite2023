<!DOCTYPE html>
<%- include("layout/header") %>
</head>
<body>
    
    <div class="auth-container">
        <form action="/signup" method="post" class="padd-15">
            <h1>This page is only for admin</h1>
            <h1>Welcome Admin !! Create Your Account</h1>
            <div class="auth-items">
                <% if(message){ %>
                    <div class="alert alert-dismissible fade show alert-<%= message.type %>" role="alert">
                        <strong><%= message.message %></strong>
                    </div>
                <% } %>    
                    <div class="form-item col-6 padd-15">
                        <div class="form-group">
                            <input type="name" name="firstname" class="form-control" placeholder="FirstName">
                        </div>
                    </div>
                    <div class="form-item col-6 padd-15">
                        <div class="form-group">
                            <input type="name" name="surname" class="form-control" placeholder="Surname">
                        </div>
                    </div>
                    <div class="form-item col-6 padd-15">
                        <div class="form-group">
                            <input type="email" name="email" class="form-control" placeholder="Email">
                        </div>
                    </div>
                    <div class="form-item col-6 padd-15">
                        <div class="form-group">
                            <input type="password" name="password" class="form-control" placeholder="Password">
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-12 padd-15">
                            <button type="submit" class="btn">Create Account</button>
                        </div>
                    </div>              
            </div>
        </form>
    </div>
</body>
</html>