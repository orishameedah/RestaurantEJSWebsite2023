<!DOCTYPE html>
<html lang="en">
    <head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/5.2.3/css/bootstrap.min.css">
     <!-- font awesome headercdn link -->
     <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css"/>
     <!-- custom css file link -->
     <link rel="stylesheet" href="../css/style.css"/>
     <link rel="icon" href="../images/utensils-solid (1).svg"/>
    </head>
    
<body>
        <!-- header section start -->
        <section class="header">
            <a href="/" class="logo"><i class="fas fa-utensils"></i>food.</a>
            <nav class="navbar">
                <a href="/admin">Menu</a>
            </nav>
    
            <div id="menu-btn" class="fas fa-bars"></div>
        </section>
        <!-- header section end -->

        <div class="container boot-container">
            <div class="row my-4">
                <div class="col-lg-12">
                    <% if(message){ %>  
                        <div 
                            class="alert alert-dismissible fade show alert-<%= message.type %>" 
                            role="alert"
                        >
                            <strong><%= message.message %></strong>
                        </div>
                    <% } %>
    
                    <div class="table-responsive"> 
                        <% if(orders != ''){ %>
                            <table class="table table-striped text-center">
                                <thead>
                                    <tr class="table-dark">
                                        <th>ID</th>
                                        <th>FullName</th>
                                        <th>FoodName</th>
                                        <th>Address</th>
                                        <th>Email</th>
                                        <th>Quantity</th>
                                        <th>Phone</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% orders.forEach((order, index)=>{ %>
                                        <tr>
                                            <td><%= order._id %></td>
                                            <td><%= order.fullname %></td>
                                            <td><%= order.foodname %></td>
                                            <td><%= order.address %></td>
                                            <td><%= order.email %></td>
                                            <td><%= order.quantity %></td>
                                            <td><%= order.phone %></td>
                                            <td>
                                                <a href="/edit-order/<%= order._id %>" class="text-success">
                                                    <i class="fas fa-edit fa-lg mx-1"></i>
                                       
                                                </a>
                                                <a href="/delete-order/<%= order._id %>" class="text-danger">
                                                    <i class="fas fa-trash fa-lg mx-1"></i>
                                                </a>
                                            </td>
                                        </tr>
                                    <% }) %>
                                </tbody>
                            </table>
                        <% } else { %>
                            <h1 class="text-center text-secondary mt-5">
                                No menu found in the database!
                            </h1>
                        <% } %>
                    </div>
                </div>
            </div>
        </div>


        <!-- custom js -->
    <script src="js/admin-script.js"></script>
</body> 
</html>